<!doctype html>
<html lang="en">
<head>
	<title>Product Selection</title>
	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css" rel="stylesheet" media="screen" />
	<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
	<script type="text/javascript" src="/scripts/cart-helper.js"></script>
</head>
<body class="container">
	<div id="header" class="jumbotron">
		<h2>Choose from the following products</h2>
	</div>
	<div class="row">
	<!-- body -->
		<form id="productForm" method="post">
			<div class="col-md-4">
				<h3>Sports</h3>
				<!-- Display the selected products -->
				<div id="sports">
					<%
						if (products && products[location]) {
							Object.keys(products[location]).forEach(function (productId) {
					%>
					<div class="checkbox">
						<label><input type="checkbox" name="product" value="<%= productId %>"><%= products[location][productId] %></label>
					</div>
					<%
							});
						}
					%>
				</div>
			</div>
			<div class="col-md-4">
				<h3>News</h3>
				<!-- Iterate through the product array -->
				<div id="news">
					<%
						if (products && products[news]) {
							Object.keys(products[news]).forEach(function (productId) {
					%>
					<div class="checkbox">
						<label><input type="checkbox" name="product" value="<%= productId %>"><%= products[news][productId] %></label>
					</div>
					<%
							});
						}
					%>
				</div>
			</div>
		<div class="col-md-4">
			<h3>Basket</h3>
			<div id="basket">
				<ul class="list-group"></ul>
				<input type="hidden" name="location" value="<%= location %>" />
				<input type="hidden" name="customer" value="<%= customer %>" />
				<button type="button" class="btn btn-primary disabled" aria-label="Right Align" id="checkout" disabled="disabled">Checkout</button>
			</div>
		</div>
		</form>
	</div>
	<footer>
		<!-- footer -->
		Some footer goes here
	</footer>
</body>